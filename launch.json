  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}\\manage.py",
      "args": ["runserver", "--noreload"],
      "django": true
    },
    {
      "name": "RunServer",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}\\manage.py",
      "args": ["runserver"],

      "django": true
    },
    {
      "name": "makemigrations",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}\\manage.py",
      "args": ["${input:variableID}", "${input:appname}"],

      "django": true
    }
  ],
  "inputs": [
    {
      "id": "variableID",
      "type": "pickString",
      "description": "migration or migrate?",
      "options": ["makemigrations", "migrate"],
      "default": "makemigrations"
    },
    {
      "id": "appname",
      "type": "promptString",
      "description": "enter app name",
      "default": "--noinput",
      "password": false
    }
  ]
}
